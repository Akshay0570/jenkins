pipeline {
    agent { label 'node' }
    triggers { pollSCM('H */1 * * *') }
    stages{
        stage('Downloading Git repository'){
            steps{
                git branch: 'main', url: 'https://github.com/Akshay0570/jenkins.git'
            }
        }
        stage('Running ansible playbook'){
            steps{
                ansiblePlaybook become: true, credentialsId: '1fabfe27-0b50-4745-84af-f0366fbee1b2', installation: 'Ansible', inventory: '**/hosts', playbook: '**/*.yml'
            }
        }
    }
}