pipeline {
    agent { label 'clinic' }
    triggers { pollSCM('H */1 * * *') }
    stages{
        stage('Downloading Git repository'){
            steps{
                git branch: 'main', url: 'https://github.com/Akshay0570/jenkins.git'
            }
        }
        stage('Running ansible playbook'){
            steps{
                ansiblePlaybook become: true, credentialsId: 'a1d9801c-4f77-4b7d-9651-da87e0bb9f28', installation: 'Ansible', inventory: '/home/jenkins/workspace/jenkins/hosts', playbook: '/home/jenkins/workspace/jenkins/playbook.yml'
            }
        }
    }
}